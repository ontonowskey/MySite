@model LoginViewModel
@{
    ViewData["Title"] = "Authorization";
}
<div>
    <h2>Enter to the profile</h2>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <br />
            <div>
                <input type="submit" value="Enter" />
            </div>
        </form>
    </div>
    <a class="button scrolly" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
</div>
